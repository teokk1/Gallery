@model Model.Entities.Artist


<div asp-validation-summary="All" class="text-danger"></div>

<div class="form-group">
    <label asp-for="LastName" class="control-label">Prezime</label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Name" class="control-label">Ime</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="BirthDate" class="control-label">Datum Rođenja</label>
    <div class="input-group date" data-provide="datepicker" data-date-format="@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
        <input asp-for="BirthDate" type="date" class="form-control">
    </div>
    <span asp-validation-for="BirthDate" class="text-danger"></span>
</div>

<div class="form-group">
    <input type="submit" value="Spremi" class="btn btn-primary" />
</div>